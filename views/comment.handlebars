<button class="btn btn-info mb-3">Go Back</button>
<div id={{_id}} class="card">
    <div class="card-body">

        <div class="card-title">
            <h5>
                {{comic}}
            </h5>
        </div>

        <img class="card-img-bottom" src={{img}} alt={{comic}}>
    </div>
</div>

{{!-- Comments --}}
<div>
    <form class="mt-3" id="newNote">
        <div class="input-group mb-3">
            <input data-id={{_id}} type="text" id="comment" class="form-control" placeholder="Put your comment here"
                aria-label="Put your comment here" aria-describedby="basic-addon2">
            <div class="input-group-append">
                <span class="input-group-text" type="submit" id="submit">Submit</span>
            </div>
        </div>
    </form>

    <div class="card" style="min-height: 400px">

        <p>{{body}}</p>
    </div>
</div>


<script>
    $("#comment").focus();


    $(document).on("click", ".btn", function () {
        window.location = ("/");
    })

    $(document).on("submit", function (event) {
        event.preventDefault();

        let id = $("#comment").data("id");
        let url = `/comic/${id}/note`

        $.ajax({
            method: "POST",
            url: url,
            data: {
                body: $("#comment").val()
            }
        })
            .then(function (data) {
                console.log(data);
                location.reload();
            });
    })


</script>