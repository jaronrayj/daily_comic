<button class="btn btn-info mb-3">Go Back</button>
<div id={{_id}} class="card">
    <div class="card-body">

        <div class="card-title">
            <h5>
                {{comic}}
            </h5>
        </div>

        <img class="card-img-bottom" src={{img}} alt={{comic}}>
    </div>
</div>

{{!-- Comments --}}
<div>
    <form class="mt-3" id="newNote">
        <div class="input-group mb-3">
            <input type="text" id="comment" class="form-control" placeholder="Put your comment here"
                aria-label="Put your comment here" aria-describedby="basic-addon2">
            <div class="input-group-append">
                <span class="input-group-text" type="submit" id="submit">Submit</span>
            </div>
        </div>
        {{!-- <button style="margin-top: 10px" type="submit" class="btn btn-primary">Submit</button> --}}
    </form>

    <div class="card" style="min-height: 400px">

        {{#each Note}}
        <p>{{body}}</p>
        {{/each}}
    </div>
</div>


<script>
    $("#comment").focus();


